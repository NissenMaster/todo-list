{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "target": "ES5",
    "module": "es2020",
    "allowJs": false,
    "strict": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "useWebpackText": true,
    "useTranspileModule": true,
    "doTypeCheck": true,
    "forkChecker": true
  },
  "exclude": ["node_modules", "dist", "static"]
}
